{
  "name": "stgen-smartapp",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "clean": "rm -rf build",
    "generate": "stgen -i accessToken",
    "watch": "tsc -w",
    "lint": "eslint .",
    "start": "node build/index.js",
    "create-module": "cp modules/moduleTemplate.ts modules/$npm_config_name.ts; sed -i \"s/stgenSmartAppModuleTemplate/$npm_config_name/g\" modules/$npm_config_name.ts; echo \"export * from './$npm_config_name';\" >> modules/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stgen/stgen-smartapp.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stgen/stgen-smartapp/issues"
  },
  "homepage": "https://github.com/stgen/stgen-smartapp#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@smartthings/core-sdk": "^1.2.0",
    "@smartthings/smartapp": "^2.4.2",
    "@stgen/stgen": "^0.1.1-alpha.9",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "typescript": "^4.0.5"
  }
}
